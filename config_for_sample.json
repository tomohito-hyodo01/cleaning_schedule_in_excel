{
  "preprocess": {
    "enable_rotation_correction": true,
    "rotation_angle_threshold": 0.5,
    "binarization_method": "adaptive",
    "adaptive_block_size": 25,
    "adaptive_c": 15,
    "denoise_kernel_size": 2,
    "morphology_iterations": 1,
    "enable_contrast_adjustment": true,
    "clahe_clip_limit": 3.0,
    "clahe_tile_size": 8
  },
  "table_detection": {
    "method": "opencv",
    "min_line_length": 50,
    "thin_line_threshold": 2,
    "medium_line_threshold": 5,
    "double_line_threshold": 2.0,
    "hough_threshold": 80,
    "hough_min_line_length": 150,
    "hough_max_line_gap": 20,
    "horizontal_kernel_scale": 60,
    "vertical_kernel_scale": 60,
    "dilation_iterations": 1,
    "merge_tolerance": 5
  },
  "ocr": {
    "engine": "paddleocr",
    "paddleocr_lang": "japan",
    "paddleocr_use_angle_cls": true,
    "paddleocr_use_gpu": false,
    "tesseract_lang": "jpn+jpn_vert",
    "tesseract_config": "--psm 6",
    "enable_vertical_text": true,
    "confidence_threshold": 0.70,
    "enable_retry": true,
    "retry_count": 1,
    "enable_normalization": true
  },
  "excel": {
    "column_width_scale": 1.5,
    "row_height_scale": 1.2,
    "assumed_dpi": 96,
    "pixel_to_column_width": 0.14285714285714285,
    "pixel_to_row_height": 0.75,
    "default_font": "MS Gothic",
    "default_font_size": 9,
    "default_horizontal_alignment": "center",
    "default_vertical_alignment": "center",
    "wrap_text": true,
    "header_row_count": 1,
    "header_fill_color": "D9D9D9",
    "header_bold": true
  },
  "debug": {
    "save_debug_images": true,
    "debug_output_dir": "debug_output",
    "log_level": "INFO",
    "generate_accuracy_report": true
  }
}

